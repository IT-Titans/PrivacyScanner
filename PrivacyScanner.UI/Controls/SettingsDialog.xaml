<UserControl x:Class="ITTitans.PrivacyScanner.UI.Controls.SettingsDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:ITTitans.PrivacyScanner.UI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600"
             d:DataContext="{d:DesignInstance Type=viewModels:SettingsDialogViewModel}">
    
    <md:DialogHost Identifier="SettingsDialogHost">
        <Grid Margin="16" Width="500" Height="400">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Regex-Regeln verwalten" 
                       Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                       Margin="0,0,0,16"/>

            <ListBox Grid.Row="1" ItemsSource="{Binding Rules}" HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding RuleName}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Rule}" FontSize="12" Opacity="0.7" TextWrapping="Wrap"/>
                            </StackPanel>

                            <Button Grid.Column="1" 
                                    Command="{Binding DataContext.EditRuleCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    ToolTip="Editieren">
                                <md:PackIcon Kind="Pencil" />
                            </Button>

                            <Button Grid.Column="2" 
                                    Command="{Binding DataContext.DeleteRuleCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Foreground="Red"
                                    ToolTip="Löschen">
                                <md:PackIcon Kind="Delete" />
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Grid.Row="2" 
                    Command="{Binding CloseCommand}"
                    Content="Schließen" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0"
                    Style="{StaticResource MaterialDesignFlatButton}"/>
        </Grid>
    </md:DialogHost>
</UserControl>
